---
import Social from "./Social.astro";

const platform = "github";
const username = "withastro";
const name = "astro";
---

<style>
  footer {
    display: flex;
    gap: 1rem;
    margin-top: 2rem;
    align-items: center;
  }

  ul {
    display: flex;
    list-style: none;
    margin: 0;
    margin-left: auto;
    padding: 0;
    gap: 0.5rem;
  }
</style>

<footer>
  <p>
    Learn more about Astro on <a
      href={`https://www.${platform}.com/${username}`}>{platform}</a
    >.
  </p>
  <ul>
    <li><Social platform="twitter" username="astrodotbuild" /></li>
    <li><Social platform="github" username="withastro" /></li>
    <li><Social platform="youtube" username="astrodotbuild" /></li>
  </ul>
</footer>
